{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "emitDeclarationOnly": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "types": [
            "@types/bun"
        ]
    },
    "include": [
        "vite.config.ts",
        "scripts/**/*",
        "src/api/**/*",
        "src/lib/**/*"
    ]
}